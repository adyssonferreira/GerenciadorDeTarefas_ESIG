<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004" author="liquibase">
        <comment>Alterar tipo de id da tabela tarefas para int</comment>

        <!-- Remover todas as chaves estrangeiras que apontam para o id -->        
        <dropForeignKeyConstraint baseTableName="tarefas" constraintName="fk_tarefas_responsavel"/>

        <!-- Mudar tipo da coluna para int com autoincrement -->        
        <modifyDataType tableName="tarefas" columnName="id" newDataType="int auto_increment"/>

        <!-- Recriar as chaves estrangeiras -->        
        <addForeignKeyConstraint baseTableName="tarefas" 
                                 baseColumnNames="responsavel_id"
                                 constraintName="fk_tarefas_responsavel"
                                 referencedTableName="usuarios"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
